{deps,
    [
    %% lager has to come first since we use its parse transform
    {lager, ".*",
        % try this to cure lager master verify test issue with bookshelf
        {git, "git://github.com/erlang-lager/lager.git",                 {branch, "master"}}},
        %{git, "git://github.com/basho/lager.git",                       {branch, "master"}}},
        %{git, "git://github.com/basho/lager.git",                       {ref,    "81eaef0ce98fdbf64ab95665e3bc2ec4b24c7dac"}}},
    {opscoderl_httpc, ".*",                            
        {git, "git://github.com/chef/opscoderl_httpc.git",              {branch, "master"}}},
    {pooler, ".*",
        {git, "git://github.com/seth/pooler.git",                       {branch, "master"}}}
    ]
}.

{profiles, [{
    test, [
        {deps, [meck]},
        {erl_opts, [export_all]}
    ]
}]}.

{erl_opts, [
    %warnings_as_errors,
    {parse_transform, lager_transform},
    debug_info
]}.

{cover_enabled, true}.
